{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "pip-compile": {
        "fileMatch": [
            "requirements.in"
        ],
        "lockFileMaintenance": {
            "enabled": true
        }
    },
    "packageRules": [
        {
            "matchManagers": [
                "pip_requirements"
            ],
            "postUpgradeTasks": {
                "commands": [
                    "bazel run //:requirements.update"
                ],
                "fileFilters": [
                    "**/requirements*.txt"
                ]
            }
        }
    ]
}
